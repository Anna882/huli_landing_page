.container-fluid
  = form_for @project do |f|
    .form-group
    .form-control.form-control-lg
    = f.label :title
    = f.text_field :title
    = f.label :description
    = f.text_field :description
    = f.label :team_id
    = f.select(:team_id, @teams.map {|t| [ t.name, t.id ] }, {include_blank: 'None'})
    = f.submit
